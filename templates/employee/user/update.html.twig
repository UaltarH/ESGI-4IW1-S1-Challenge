{% extends 'base.html.twig' %}

{% block body %}
	<div class="page-wrapper">
		<h1 class="page-title">Modification d'un employé</h1>
		{{ form_start(form) }}
		{{ form_row(form.firstname) }}
		{{ form_row(form.lastname) }}
		{{ form_row(form.email) }}
		{{ form_row(form.roles) }}		

		<button type="submit" class="btn btn-primary btn-lg self-center w-fit">Modifier</button>
		{{ form_end(form) }}

        <a href="{{ path('users_company_manager') }}" class="underline">Retour en arrière</a>
	</div>
{% endblock %}
