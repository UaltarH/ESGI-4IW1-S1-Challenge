{% extends 'base.html.twig' %}
{% block title %}Tech Care{% endblock %}

{% block body %}
    <div class="page-wrapper bg-light-gray dark:bg-primary-dark">
        <h1 class="page-title">Design Guide</h1>
        <div class="flex sm:flex-col lg:flex-row justify-between items-stretch mb-4 gap-4 sm:h-auto lg:h-64">
            <div class="chart chart-small flex flex-col justify-evenly items-center h-full flex-1">
                <div>
                    <h2>KPI Title</h2>
                    <p class="chart-kpis">
                        <span class="chart-kpi">123,99</span> UNIT
                        <span class="chart-kpi-growth chart-kpi-positive">+ 20%</span>
                    </p>
                </div>
                <div>
                    <h2>KPI Title</h2>
                    <p class="chart-kpis">
                        <span class="chart-kpi">456,00</span>
                        <span class="chart-kpi-growth chart-kpi-negative">- 20%</span>
                    </p>
                </div>
            </div>
            <div class="chart chart-small flex-1">
                {{ render_chart(chartLine, {'class': 'my-chart'}) }}
                <h2>Char Line</h2>
            </div>
            <div class="chart chart-small flex-1">
                {{ render_chart(chartBar, {'class': 'my-chart'}) }}
                <h2>Chart Bar</h2>
            </div>
        </div>
        <div class="flex sm:flex-col lg:flex-row justify-between items-center mb-4 gap-4 sm:h-auto lg:h-auto">
            <h2>Button</h2>
            <div class="chart chart-main flex-1">
                <button class="btn btn-primary">Primary</button>
                <button class="btn btn-error">Error</button>
                {{ include('_components/darkMode.html.twig') }}
            </div>
        </div>
        <div class="flex sm:flex-col lg:flex-row justify-between items-center mb-4 gap-4 sm:h-auto lg:h-auto">
            <h2>Form</h2>
            <div class="chart chart-small flex-1">
                <div class="form-input-col">
                    <label for="inputEmail" class="w-1/2">Email :</label>
                    <input type="email" value="" name="email" id="inputEmail" class="form-control form-control-small" autocomplete="email">
                </div>
            </div>
            <div class="chart chart-small flex-1">

                <div class="form-input-col">
                    <label for="select-design" class="w-1/2">Email :</label>
                    <select name="elect-design"  id="select-design" class="form-control form-control-small">
                        <option value="1">Option 1</option>
                        <option value="2">Option 2</option>
                        <option value="3">Option 3</option>
                    </select>
                </div>
            </div>
        </div>
        {% include '_components/crudTable.html.twig' with {
            'title' : 'Gestion des devis',
            'entityProperties': entityProperties,
            'datas': datas,
            'createRoute': 'app_quotation_create',
            'createLabel': 'Cr√©er un devis'
        } %}
    </div>
{% endblock %}