{% extends 'base.html.twig' %}

{% block title %}Modifier un produit:
{% endblock %}

{% block body %}
<div class="page-wrapper">
	<h1 class="page-title">Modification d'un produit</h1>
{#	{% form_theme form '/_form/twoColForm.html.twig' %}#}
	{{ form_start(form) }}
	{{ form_row(form.name) }}
	{{ form_row(form.brand) }}
	{{ form_row(form.productCategory) }}
	{{ form_row(form.components) }}

	<button type="submit" class="btn btn-primary btn-lg self-center w-fit">Modifier</button>
	{{ form_end(form) }}

	<a href="{{ path('app_products_manager') }}">back to list</a>
</div>
{% endblock %}
