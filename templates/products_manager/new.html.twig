{% extends 'base.html.twig' %}

{% block title %}Ajouter un nouveau produit:
{% endblock %}

{% block body %}
	<div class="page-wrapper">
		<h1 class="page-title">Création d'un produit</h1>
		{{ form_start(form) }}
		{{ form_row(form.name) }}
		{{ form_row(form.brand) }}
		{{ form_row(form.productCategory) }}
		{{ form_row(form.components) }}

		<button type="submit">Créer</button>
		{{ form_end(form) }}

		<a href="{{ path('app_products_manager') }}">back to list</a>
	</div>
{% endblock %}
