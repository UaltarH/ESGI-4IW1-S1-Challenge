{# templates/bundles/TwigBundle/Exception/error404.html.twig #}
{% extends 'base.html.twig' %}

{% block body %}
    <div class="page-wrapper error-page">
        <h1 class="page-title error-title">Error <span class="error-code">{{ code }}</span></h1>
        <h2 class="error-message">{{ message }}</h2>
        <p>
            Oops ! Something went wrong !
            <br/><a href="{{ path('default_index') }}" class="error-link">return to the homepage</a>.
        </p>
        <p>
            Try to come back late, our team is (probably) working on it.
        </p>
    </div>
{% endblock %}